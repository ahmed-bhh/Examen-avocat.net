            </div>
            <div class="form-group">
                <label asp-for="Client_FK" class="control-label"></label>
                <select asp-for="Client_FK" asp-items=ViewBag.listClient class="form-control"></select>
                <span asp-validation-for="Client_FK" class="text-danger"></span>
